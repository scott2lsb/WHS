<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 获得焦点时的背景图片 -->

    <item android:drawable="@drawable/ic_action_favorite_off_pressed" android:state_focused="true" android:state_pressed="false"/>

    <!-- 获得焦点并单击时的背景图片 -->

    <item android:drawable="@drawable/ic_action_favorite_off_pressed" android:state_focused="true" android:state_pressed="true"/>

    <!-- 失去焦点时的背景图片 -->

    <item android:drawable="@drawable/ic_action_favorite_off_pressed" android:state_focused="false" android:state_pressed="true"/>

    <!-- 默认时的背景图片 -->

    <item android:drawable="@drawable/ic_action_favorite_off_normal"/>

</selector>