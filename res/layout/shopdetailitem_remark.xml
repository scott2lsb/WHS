<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/shopremark_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="点评   (共218条)"
        android:textColor="#989084"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/shopremark_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/shopremark_title"
        android:layout_below="@id/shopremark_title"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="优惠券 (20)"
        android:textColor="#454545"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shopremark_context"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/shopremark_title"
        android:layout_below="@id/shopremark_username"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="5"
        android:singleLine="false"
        android:text="收藏 (100)"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shopremark_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/shopremark_title"
        android:layout_below="@id/shopremark_context"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="06-21"
        android:textColor="#989084"
        android:textSize="14sp" />

</RelativeLayout>