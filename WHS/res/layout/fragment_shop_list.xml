<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/choose_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shop_list_choose_bg"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/classify_layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

            <ImageView
                    android:id="@+id/classify_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="#ff0000"
                    />

            <TextView
                    android:id="@+id/classify_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/classify_icon"
                    android:text="全部分类"
                    android:textColor="#222222"
                    android:textSize="14sp"/>

            <ImageView
                    android:id="@+id/classify_subscript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_down"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/region_layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

            <ImageView
                    android:id="@+id/region_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="#ff0000"
                    />

            <TextView
                    android:id="@+id/region_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/region_icon"
                    android:text="全城"
                    android:textColor="#222222"
                    android:textSize="14sp"/>

            <ImageView
                    android:id="@+id/region_subscript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_down"/>

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/sort_layout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

            <ImageView
                    android:id="@+id/sort_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="#ff0000"
                    />

            <TextView
                    android:id="@+id/sort_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/sort_icon"
                    android:text="全部分类"
                    android:textColor="#222222"
                    android:textSize="14sp"/>

            <ImageView
                    android:id="@+id/sort_subscript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_down"/>

        </RelativeLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:dividerHeight="0dp"
            android:divider="#00000000"
            />

</LinearLayout>