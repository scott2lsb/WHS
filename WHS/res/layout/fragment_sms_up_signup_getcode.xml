                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15.0dip" android:showDividers="beginning">
        <TextView android:id="@+id/tips" android:paddingTop="15.0dip" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"/>
        <Button android:textSize="@dimen/text_size_h3" android:textColor="@color/white" android:gravity="center"
                android:id="@+id/show_result" android:background="@drawable/bg_cornered_green"
                android:layout_width="fill_parent" android:layout_height="45.0dip" android:layout_marginTop="15.0dip"
                android:text="@string/show_after_sms_sent"/>
    </LinearLayout>
    <include android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="15.0dip"
             layout="@layout/layout_signup_terms"/>
</LinearLayout>