<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#ffefefef"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10.0dip">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:text="@string/user_point"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:background="@color/black4"
                android:layout_marginTop="6.0dip"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/gray_horizontal_separator"
                android:showDividers="middle">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="90.0dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10.0dip">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10.0dip">
                    <TextView
                            android:id="@+id/user_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15.0sp"
                            android:textColor="@color/black2"/>
                    <TextView
                            android:id="@+id/user_growth_value"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:textSize="15.0sp"
                            android:textColor="@color/black3"
                            android:gravity="center_horizontal"
                            android:text="@string/current_growth"
                            android:layout_weight="1.0"/>
                    <TextView
                            android:id="@+id/level_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14.0sp"
                            android:textColor="@color/green"
                            android:text="@string/how_to_raise"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/growth_rating_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/user_level_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_user_lv0"/>
                    <SeekBar
                            android:id="@+id/user_growth_rating"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16.0dip"
                            android:paddingRight="16.0dip"
                            android:focusable="false"
                            android:layout_marginLeft="-14.0dip"
                            android:layout_marginRight="-14.0dip"
                            android:layout_marginBottom="2.0dip"
                            android:maxHeight="8.0dip"
                            android:indeterminateOnly="false"
                            android:indeterminateDrawable="@drawable/user_level_progress_seekbar"
                            android:progressDrawable="@drawable/user_level_progress_seekbar"
                            android:minHeight="8.0dip"
                            android:thumb="@null"
                            android:layout_weight="1.0"/>
                    <ImageView
                            android:id="@+id/user_level_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_user_lv6"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/growth_value_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="-2.0dip">
                    <TextView
                            android:id="@+id/growth_value_0"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:textSize="10.0sp"
                            android:textColor="#ff999999"
                            android:gravity="left"
                            android:paddingLeft="2.0dip"
                            android:text="0"
                            android:layout_weight="0.6"/>
                    <TextView
                            android:id="@+id/growth_value_1"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:textSize="10.0sp"
                            android:textColor="#ff999999"
                            android:gravity="center"
                            android:text="25000"
                            android:drawableTop="@drawable/ic_user_level_line"
                            android:layout_weight="1.0"/>
                    <TextView
                            android:id="@+id/growth_value_2"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:textSize="10.0sp"
                            android:textColor="#ff999999"
                            android:gravity="center"
                            android:text="50000"
                            android:drawableTop="@drawable/ic_user_level_line"
                            android:layout_weight="1.0"/>
                    <TextView
                            android:id="@+id/growth_value_3"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:textSize="10.0sp"
                            android:textColor="#ff999999"
                            android:gravity="center"
                            android:text="75000"
                            android:drawableTop="@drawable/ic_user_level_line"
                            android:layout_weight="1.0"/>
                    <TextView
                            android:id="@+id/growth_value_4"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:textSize="10.0sp"
                            android:textColor="#ff999999"
                            android:gravity="right"
                            android:paddingRight="2.0dip"
                            android:text="100000"
                            android:layout_weight="0.6"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/current_point_container"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip">
                <TextView
                        android:id="@+id/current_point"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_global_account_integral"
                        android:drawablePadding="15.0dip"
                        android:layout_weight="1.0"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/green"
                        android:gravity="center"
                        android:text="积分记录"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawablePadding="10.0dip"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/point_event"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip">
                <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:gravity="center_vertical"
                        android:text="@string/point_event"
                        android:drawableLeft="@drawable/ic_global_account_integral_act"
                        android:drawablePadding="15.0dip"
                        android:layout_weight="1.0"/>
                <TextView
                        android:id="@+id/point_activity_new_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h10"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_global_label_red"
                        android:paddingLeft="4.0dip"
                        android:paddingTop="2.0dip"
                        android:paddingRight="4.0dip"
                        android:paddingBottom="2.0dip"
                        android:visibility="gone"
                        android:layout_marginRight="10.0dip"
                        android:text="NEW"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"/>
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/point_exchange_container"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip">
                <TextView
                        android:id="@+id/point_exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:gravity="center_vertical"
                        android:text="@string/point_exchange"
                        android:drawableLeft="@drawable/ic_global_account_integral_exchange"
                        android:drawablePadding="15.0dip"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:id="@+id/point_exchange_new_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:src="@drawable/ic_reminder"
                        android:layout_toRightOf="@id/point_exchange"
                        android:layout_centerVertical="true"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/point_exchange_info"
                    android:layout_width="fill_parent"
                    android:layout_height="70.0dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="15.0dip">
                <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:gravity="center_vertical"
                        android:text="@string/point_info"
                        android:drawableLeft="@drawable/ic_global_account_integral_info"
                        android:drawablePadding="15.0dip"
                        android:layout_weight="1.0"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:textColor="@color/black2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_settings"/>
        <View
                android:background="@color/black4"
                android:layout_width="fill_parent"
                android:layout_height="2.0px"
                android:layout_marginTop="6.0dip"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/gray_horizontal_separator"
                android:showDividers="middle">
            <LinearLayout
                    android:id="@+id/modify_user_name"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip">
                <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:text="@string/user_admin_user_name"
                        android:drawableLeft="@drawable/user_admin_name"
                        android:drawablePadding="15.0dip"
                        android:layout_weight="1.0"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/green"
                        android:gravity="center"
                        android:text="@string/user_admin_modify"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawablePadding="10.0dip"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/modify_password_container"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip">
                <TextView
                        android:id="@+id/modify_password"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:gravity="center_vertical"
                        android:background="@drawable/list_row_selector"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/user_admin_modify_password"
                        android:drawableLeft="@drawable/user_admin_modify_password"
                        android:drawablePadding="15.0dip"
                        android:layout_weight="1.0"/>
                <TextView
                        android:textSize="@dimen/text_size_h10"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:id="@+id/modify_password_tip"
                        android:background="@drawable/bg_red"
                        android:paddingLeft="4.0dip"
                        android:paddingTop="2.0dip"
                        android:paddingRight="4.0dip"
                        android:paddingBottom="2.0dip"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:text="@string/user_admin_not_set_password"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow"/>
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/modify_phone"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip">
                <TextView
                        android:id="@+id/has_binded_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:text="@string/user_admin_binded_phone"
                        android:drawableLeft="@drawable/user_admin_bind_phone"
                        android:drawablePadding="15.0dip"
                        android:layout_centerVertical="true"/>
                <TextView
                        android:textSize="15.0sp"
                        android:textColor="@color/black1"
                        android:id="@+id/binding_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_toRightOf="@id/has_binded_phone"
                        android:layout_centerVertical="true"/>
                <TextView
                        android:id="@+id/bind_new_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="@color/green"
                        android:gravity="center"
                        android:text="@string/user_admin_change"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawablePadding="10.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                    android:textSize="15.0sp"
                    android:textColor="@color/black1"
                    android:gravity="center_vertical"
                    android:id="@+id/manage_consignee_address"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:text="@string/user_admin_manage_consignee"
                    android:drawableLeft="@drawable/user_admin_address"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawablePadding="15.0dip"/>
            <TextView
                    android:id="@+id/manage_cards"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:enabled="false"
                    android:textSize="15.0sp"
                    android:textColor="@color/user_admin_my_card_color_selector" android:gravity="center_vertical"
                    android:background="@drawable/list_row_selector"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:visibility="gone"
                    android:text="@string/user_my_cards_title"
                    android:drawableLeft="@drawable/user_admin_mycards"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawablePadding="15.0dip"/>
        </LinearLayout>
        <Button
                android:id="@+id/logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20.0sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_cornered_red"
                android:padding="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="10.0dip"
                android:text="@string/dialog_title_logout"/>
    </LinearLayout>
</ScrollView>