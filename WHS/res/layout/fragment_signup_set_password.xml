<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="#ffffffff" android:padding="15.0dip"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginLeft="15.0dip" android:layout_marginTop="15.0dip"
                  android:layout_marginRight="15.0dip">
        <EditText android:textSize="@dimen/text_size_h6"
                  android:textColor="#ff000000"
                  android:textColorHint="@color/black3"
                  android:id="@+id/password_edit"
                  android:background="@drawable/bg_edit_selector"
                  android:nextFocusDown="@+id/password_confirm_edit"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/password_hint"
                  android:inputType="textPassword"
                  android:imeOptions="actionNext|flagNoExtractUi"/>
        <EditText android:textSize="@dimen/text_size_h6" android:textColor="#ff000000"
                  android:textColorHint="@color/black3" android:id="@+id/password_confirm_edit"
                  android:background="@drawable/bg_edit_selector" android:nextFocusUp="@id/password_edit"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="15.0dip" android:hint="@string/password_confirm_hint"
                  android:inputType="textPassword" android:imeOptions="actionDone|flagNoExtractUi"/>
    </LinearLayout>
    <Button android:textSize="@dimen/text_size_h3" android:textColor="@color/white" android:gravity="center"
            android:id="@+id/signup_button" android:background="@drawable/bg_cornered_green"
            android:layout_width="fill_parent" android:layout_height="45.0dip" android:layout_marginLeft="15.0dip"
            android:layout_marginTop="15.0dip" android:layout_marginRight="15.0dip" android:text="@string/register"/>
</LinearLayout>