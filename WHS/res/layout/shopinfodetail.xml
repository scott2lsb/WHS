<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/shopinfo_layout_index_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/shopinfo_btn_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/shopinfo_text_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <!-- <ImageButton -->
        <!-- android:id="@+id/shopinfo_btn_share" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:background="#00000000" -->
        <!-- android:src="@drawable/shopinfo_share_selector" /> -->


        <!-- <ImageButton -->
        <!-- android:id="@+id/shopinfo_btn_collect" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:layout_marginRight="5dp" -->
        <!-- android:layout_toLeftOf="@id/shopinfo_btn_share" -->
        <!-- android:background="#00000000" -->
        <!-- android:src="@drawable/shopinfo_collect_selector" /> -->

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shopinfo_layout_middle_netloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shopinfo_layout_index_top"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/shopinfo_progressBar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/loading_style" />

        <TextView
            android:id="@+id/shopinfo_textview_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="正在获取数据..."
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/shopinfo_layout_detail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/shopinfo_layout_index_top"
        android:background="#ffffff"
        android:visibility="gone" >

        <ListView
            android:id="@+id/shopinfo_list_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00d8d4cf"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/divide_line" />
        <!-- <ExpandableListView -->
        <!-- android:id="@+id/shopinfo_expandablelist_detail" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="fill_parent" -->
        <!-- android:background="#00d8d4cf" -->
        <!-- android:visibility="gone" /> -->

    </RelativeLayout>

</RelativeLayout>