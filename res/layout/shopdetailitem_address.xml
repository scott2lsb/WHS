<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0000ff00"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shopadd_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_address_big" />

    <ImageView
        android:id="@+id/shopadd_arraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_normal" />

    <TextView
        android:id="@+id/shopadd_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/shopadd_arraw"
        android:layout_toRightOf="@id/shopadd_img"
        android:gravity="center_vertical|left"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>