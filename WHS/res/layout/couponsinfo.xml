<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/couponinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/couponinfo_layout_index_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/couponinfo_btn_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/couponinfo_text_share"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="分享"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/couponinfo_btn_share"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/couponinfo_text_share"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/shopinfo_share_selector" />

        <TextView
            android:id="@+id/couponinfo_text_collect"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/couponinfo_btn_share"
            android:gravity="center"
            android:singleLine="true"
            android:text="收藏"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/couponinfo_btn_collect"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/couponinfo_text_collect"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/shopinfo_collect_selector" />

        <TextView
            android:id="@+id/couponinfo_text_shopname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/couponinfo_btn_collect"
            android:layout_toRightOf="@id/couponinfo_btn_back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/couponinfo_layout_middle_netloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/couponinfo_layout_index_top"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/couponinfo_progressBar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/loading_style" />

        <TextView
            android:id="@+id/couponinfo_textview_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="正在获取数据..."
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/couponinfo_scrollview_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/couponinfo_layout_index_top"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/couponinfo_layout_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <FrameLayout
                android:id="@+id/couponinfo_framelayout_coupon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >

                <ProgressBar
                    android:id="@+id/couponinfo_progress_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@drawable/loading_style"
                    android:minHeight="300dp"
                    android:scaleType="center" />

                <ImageView
                    android:id="@+id/couponinfo_img_coupon"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#00ffffff" />
            </FrameLayout>

            <ImageView
                android:id="@+id/couponinfo_img_overdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/couponinfo_framelayout_coupon"
                android:layout_alignTop="@id/couponinfo_framelayout_coupon"
                android:background="@drawable/overdate"
                android:scaleType="fitXY"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/couponinfo_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/couponinfo_framelayout_coupon"
                android:layout_below="@id/couponinfo_framelayout_coupon"
                android:padding="5dp"
                android:text=""
                android:textColor="#a0978c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/couponinfo_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/couponinfo_framelayout_coupon"
                android:layout_below="@id/couponinfo_text_date"
                android:padding="5dp"
                android:textColor="#f7691c"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/couponinfo_text_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/couponinfo_text_price"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/couponinfo_text_price"
                android:textColor="#a0978c"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/couponinfo_text_couponname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/couponinfo_text_price"
                android:layout_below="@id/couponinfo_text_price"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/couponinfo_img_couponinfobg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/couponinfo_text_couponname"
                android:background="@drawable/ic_coupon_info_bg" />

            <com.yl.whs.util.AutoText
                android:id="@+id/couponinfo_text_couponinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/couponinfo_text_price"
                android:layout_below="@id/couponinfo_img_couponinfobg"
                android:lineSpacingMultiplier="1.5"
                android:padding="5dp"
                android:text="暂无信息"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>