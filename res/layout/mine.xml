<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaebeb" >

    <RelativeLayout
        android:id="@+id/mine_layout_index_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <TextView
            android:id="@+id/mine_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="@string/main_tab_my"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mine_btn_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/logout_selector" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_layout_middle_netloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mine_layout_index_top"
        android:gravity="center"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/mine_progressBar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/loading_style" />

        <TextView
            android:id="@+id/mine_textview_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="正在获取数据..."
            android:textSize="20sp" />
    </LinearLayout>
    <!-- 用户信息 -->

    <ScrollView
        android:id="@+id/mine_scrollview_myinfo"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mine_layout_index_top"
        android:scrollbars="none"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#eaebeb" >

            <RelativeLayout
                android:id="@+id/mine_layout_middle"
                android:layout_width="wrap_content"
                android:layout_height="130dp" >

                <FrameLayout
                    android:id="@+id/mine_layout_head"
                    android:layout_width="118dp"
                    android:layout_height="112dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp" >

                    <ImageView
                        android:id="@+id/mine_imageview_head_background"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/mine_head_background"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/mine_imageview_head_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="1dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_head_default" />
                </FrameLayout>

                <TextView
                    android:id="@+id/mine_text_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/mine_layout_head"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="#454545"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mine_text_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_text_nickname"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/mine_layout_head"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="地址"
                    android:textColor="#989084"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_layout_info"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/mine_layout_middle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mine_info_bg"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/mine_text_today_score"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="70dp"
                    android:singleLine="true"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/mine_text_total_score"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mine_text_today_score"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="70dp"
                    android:singleLine="true"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_layout_coupon"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@id/mine_layout_info"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mine_coupon_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/mine_textview_coupon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="37dp"
                    android:singleLine="true"
                    android:text="我的收藏"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mine_layout_comment"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@id/mine_layout_coupon"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mine_comment_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/mine_textview_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingLeft="37dp"
                    android:singleLine="true"
                    android:text="我的评论"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>