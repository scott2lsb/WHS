<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/remarkinfo_layout_index_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/remarkinfo_btn_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/remarkinfo_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="查看评论"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/remarkinfo_layout_middle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/remarkinfo_layout_index_top"
        android:background="#eaebeb"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/remarkinfo_linearlayout_shopnameAndispass"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="#404040"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/remarkinfo_text_ispass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="未通过审核"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/remarkinfo_img_ispass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/remarkinfo_text_ispass"
                android:background="@drawable/comment_isnot_pass"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/remarkinfo_text_shopname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/remarkinfo_text_shopname"
                android:singleLine="true"
                android:text="店铺名"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/remarkinfo_linearlayout_stars"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remarkinfo_linearlayout_shopnameAndispass"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/remarkinfo_img_star_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/my_favorite_icon_press"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/remarkinfo_img_star_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my_favorite_icon_press"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/remarkinfo_img_star_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my_favorite_icon_press"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/remarkinfo_img_star_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my_favorite_icon_press"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/remarkinfo_img_star_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my_favorite_icon_press"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/remarkinfo_scrollview_showcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remarkinfo_linearlayout_stars" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/remarkinfo_text_showcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:text="评论内容"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/remarkinfo_text_showtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:gravity="left|bottom"
                    android:minHeight="20dp"
                    android:padding="5dp"
                    android:text="评论时间" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>