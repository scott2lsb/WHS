<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login"
        android:paddingTop="20.0dip"
        android:paddingBottom="20.0dip">

    <LinearLayout
            android:id="@+id/not_login_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black3"
                android:gravity="center"
                android:text="@string/user_not_login"/>
        <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/login_color_selector"
                android:layout_gravity="center"
                android:background="@drawable/login_btn_selector"
                android:paddingLeft="40.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="40.0dip"
                android:paddingBottom="3.0dip"
                android:layout_marginTop="5.0dip"
                android:text="@string/login"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/login_container"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginLeft="27.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_width="0.0dip">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearance"
                        android:singleLine="true"/>
                <ImageView
                        android:id="@+id/user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:src="@drawable/ic_user_lv0"
                        android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:visibility="gone">
                <TextView
                        android:id="@+id/balance"
                        android:textSize="@dimen/text_size_h9"
                        android:textColor="@color/black3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                <ProgressBar
                        android:id="@+id/balance_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleSmall"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip">
                <TextView
                        android:id="@+id/point_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h9"
                        android:textColor="@color/black3"
                        android:singleLine="true"/>
                <ProgressBar
                        android:id="@+id/point_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleSmall"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/point_exchange_tips"
                android:layout_width="75.0dip"
                android:layout_height="22.0dip"
                android:textSize="@dimen/text_size_h10"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_global_label_red"
                android:paddingLeft="4.0dip"
                android:paddingTop="2.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="2.0dip"
                android:layout_marginRight="12.0dip"
                android:text="@string/point_exchange"
                android:visibility="invisible"/>

        <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.0dip"
                android:src="@drawable/ic_arrow_right"/>
    </LinearLayout>

</FrameLayout>