<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaebeb" >

    <RelativeLayout
        android:id="@+id/setting_layout_index_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <ImageButton
            android:id="@+id/setting_btn_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/setting_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="个人设置"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/settting_viewfliper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/setting_layout_index_top" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:scrollbars="none" >

            <RelativeLayout
                android:id="@+id/setting_layout_first"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/setting_layout_username"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shoplist_chose_bg"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/setting_text_username"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_layout_modify"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_layout_username"
                    android:background="#eaebeb"
                    android:orientation="vertical" >

                    <!-- ListView 高度写成固定的了，fill-parent wrop-content 都会显示不完整 -->

                    <ListView
                        android:id="@+id/setting_list_modify"
                        android:layout_width="fill_parent"
                        android:layout_height="130dp"
                        android:background="#ffffff"
                        android:cacheColorHint="#00000000"
                        android:divider="@drawable/divide_line"
                        android:dividerHeight="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_layout_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_layout_modify"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/setting_btn_logout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/login_btn_selector"
                        android:text="退出登录"
                        android:textColor="@drawable/login_text_selector"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/setting_layout_second"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/setting_text_modify_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:text="输入新昵称"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/setting_edittext_modify_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_text_modify_nickname"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bg_selector"
                android:maxLength="11"
                android:singleLine="true"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_edittext_modify_nickname"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/setting_btn_save_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/login_btn_selector"
                    android:text="保 存"
                    android:textColor="@drawable/login_text_selector"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/setting_btn_back_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/login_btn_selector"
                    android:text="返 回"
                    android:textColor="@drawable/login_text_selector"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_layout_third"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/setting_text_modify_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:text="输入新地址"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/setting_edittext_modify_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_text_modify_address"
                android:layout_margin="10dp"
                android:background="@drawable/edit_bg_selector"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_edittext_modify_address"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/setting_btn_save_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/login_btn_selector"
                    android:text="保 存"
                    android:textColor="@drawable/login_text_selector"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/setting_btn_back_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/login_btn_selector"
                    android:text="返 回"
                    android:textColor="@drawable/login_text_selector"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
    </ViewFlipper>

</RelativeLayout>